                    <div class="nav-Buttons makeFlex">

                        <% if(user != null){ %>
                            <a href="/cart" class="cart-Button">
                                <i class="cart-icon fa-solid fa-bag-shopping"></i>
                                <span class="cart-item-count">0</span>
                            </a>

                            <a class="profile" href="/profile">
